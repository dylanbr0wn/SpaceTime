{
    "name": "col_timesheet_api",
    "version": "1.0.0",
    "description": "Timesheet system API for City of Langford.",
    "scripts": {
        "lint": "eslint .",
        "start": "npm run prod",
        "build": "npm-run-all clean transpile copy-temp docker-build docker-push",
        "action-build": "npm-run-all clean transpile",
        "server": "node ./build/index",
        "docker-build": "docker build --tag lchdbrown/timesheet:apilatest .",
        "docker-push": "docker push lchdbrown/timesheet:apilatest",
        "dev": "SET NODE_ENV=development & npm-run-all build server",
        "prod": "SET NODE_ENV=production & npm-run-all build server",
        "transpile": "tsc",
        "copy-temp": "copyfiles -E -f ./src/api/templates/* ./build/api/templates",
        "clean": "rimraf build",
        "start:dev": "nodemon",
        "test": "jest"
    },
    "nodemonConfig": {
        "exec": "npm run dev",
        "watch": [
            "src/*"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dylanbr0wn/COL_Timesheet_Api.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/dylanbr0wn/COL_Timesheet_Api/issues"
    },
    "homepage": "https://github.com/dylanbr0wn/COL_Timesheet_Api#readme",
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.0",
        "@babel/eslint-parser": "^7.17.0",
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-typescript": "^7.16.7",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/ejs": "^3.1.0",
        "@types/express": "^4.17.13",
        "@types/html-pdf": "^3.0.0",
        "@types/morgan": "^1.9.3",
        "@types/mssql": "^7.1.5",
        "@types/nodemailer": "^6.4.4",
        "@types/passport": "^1.0.7",
        "@types/passport-azure-ad": "^4.3.1",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "eslint": "^8.10.0",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "ejs": "^3.1.6",
        "express": "5.0.0-beta.1",
        "express-validator": "^6.13.0",
        "helmet": "^5.0.2",
        "html-pdf": "^3.0.1",
        "moment": "^2.29.1",
        "morgan": "^1.10.0",
        "mssql": "^8.0.2",
        "nodemailer": "^6.7.1",
        "passport": "^0.5.0",
        "passport-azure-ad": "^4.3.1",
        "passport-custom": "^1.1.1",
        "phantomjs-prebuilt": "^2.1.16",
        "rimraf": "^3.0.2"
    }
}
